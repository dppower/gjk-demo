{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../build/app"
    }
}