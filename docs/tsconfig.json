{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir":  "app"
    },
    "include":  [
        "../app/*"
    ]
}