{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "include":  [
      "../app/*"
  ],

  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit": true
 }
}
